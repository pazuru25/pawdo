<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>PawDo</title>
<%= stylesheet_link_tag 'registration', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <h2>新規登録</h2>
  <div class='form-wrap'>
    <div class='form-header'></div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
      </div>
      <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 足跡太郎", maxlength:"20", autofocus: true  %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">確認パスワード</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワード" %>
    </div>
    <p class='info-text'>※全ての入力をお願いします</p>
    <div class='register-btn'>
      <%= f.submit "登録" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>
</body>
</html>