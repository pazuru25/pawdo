<%= form_with model: @plan, url: plans_path do |form| %>
  <div class="form-max">
    <div class="form-group">
    <h1>予定登録</h1>
      <p>予定タイトル:</p>
      <%= form.text_field :title, required: true %>
    </div>

    <div class="form-group">
      <p>日時:</p>
      <%= form.date_field :schedule_date, value: Date.today, required: true %>
      <%= form.time_field :schedule_time, value: Time.now, required: true %>
    </div>

    <div class="form-group">
      <p>付箋カラー:</p>
      <div class="color-options">
        <% Color.options.each do |name, value| %>
          <p>
            <%= form.radio_button :color_id, value, checked: value == 'color1' %>
            <span class="color <%= value %>"></span>
          </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
    <p>事前通知:</p>
    <div class="checkbox-group">
      <% Repetition.options.each do |name, value| %>
        <p>
          <%= form.radio_button :repetition_id, value, checked: value == 'none' %>
          <%= name %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <p>繰り返し通知機能:</p>
    <div class="checkbox-group">
      <% Recurring.options.each do |name, value| %>
        <p>
          <%= form.radio_button :recurring_id, value, checked: value == 'none' %>
          <%= name %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="form-group">
  <p>通知方法:</p>
  <div class="notification-options">
    <% Notification.options.each do |option| %>
      <%= form.check_box :notification, { multiple: true, checked: true }, option[1] %>
      <%= label_tag "plan_notification_#{option[1]}", option[0] %><br>
    <% end %>
  </div>
</div>


    <div class="form-group">
      <p>予定詳細メモ:</p>
      <%= form.text_area :memo %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "登録", class: "button" %>
  </div>
<% end %>
