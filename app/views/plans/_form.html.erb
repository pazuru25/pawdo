<%= form_with model: @plan, url: plans_path do |form| %>
  <div class="form-max">
    <div class="form-group">
    <h1>予定登録</h1>
      <p>予定タイトル:</p>
      <%= form.text_field :title, required: true %>
    </div>

    <div class="form-group">
      <p>日時:</p>
      <%= form.date_field :schedule_date, value: Date.today, required: true %>
      <%= form.time_field :schedule_time, value: Time.now, required: true %>
    </div>

    <div class="form-group">
      <p>付箋カラー:</p>
      <div class="color-options">
        <% Color.options.each do |name, value| %>
          <p>
            <%= form.radio_button :color_id, value, checked: value == 'color1' %>
            <span class="color <%= value %>"></span>
          </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <p>予定詳細メモ:</p>
      <%= form.text_area :memo %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "登録", class: "button" %>
  </div>
<% end %>
